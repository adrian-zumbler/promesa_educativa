global_green = #87d37c
porcelain = #eaeaea
casablanca = #f3b350
rosa = #af333c
gris = #353535
smooth_green = #e2e8e3


html, body {
	heigth 100%
}
.small
	width 60px

.Header
	background global_green
	padding-right 1em
	&-nav
		float right
		margin-top 22px
	&-nav a 
		font-size 14px
		color white
		text-decoration none
		padding-left 1em
	&-title
		float right
		color white
		padding-right 0.5em
		font-weight 100px
.Logo
	&-imageContainer
		padding 1em
		width 130px
	&-image
		width 100%
		
#content
	width 85%
	
.SideMenu
	width 15%
	float right
	background-color porcelain
	ul
		list-style none
		a
			color gris
			text-decoration none
			&:hover
				color global_green
			&:selected
				color global_green

/* Login route*/
		
.Login
	
	&-form
		background porcelain
		border-radius 6px
		margin 7em auto 
		margin-left 38%
		padding 3em
		width 500px
	&-formInput
		width 400px
		label 
			width 28%
			color global_green
			font-size 1.1em
		input 
			border-radius 6px
			border 1px solid porcelain
			padding-left 0.4em
			width 72%

.Btn 
	background-color casablanca
	border none
	color white
	border-radius 8px
	width 100%
	background-color rosa
	
/*Tablas*/
.Table
	width 95%
	margin 0 auto
	&-header 
		background-color #87d37c
	&-titleContainer
		text-align center
		color white
	&-title
		font-size 0.8em
	&-colum
		font-size 12px
		color gris
	&-row:nth-child(odd)
		background-color smooth_green
			


					
		

			
		
	
		
			
			
			
			
		
			
		
				
			
			
			
			

			
	
			
				
		
		
	

